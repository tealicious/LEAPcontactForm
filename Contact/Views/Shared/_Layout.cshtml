<!-- I took some liberties with the jumbotron dimensions and hero image becauase the one provided was cutting the subject's head off, further notes on this are found in the screen.scss file -->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daniel Carter Contact Page</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Example Site", "Index", "Home", new { area = "" }, new { @class = "navbar-brand active" })
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-right nav-pills">
                <li id='facebook'><a target="_blank" href="https://www.facebook.com/LEAPagencylife/" ><span><i class="fa fa-facebook" aria-hidden="true"></i></span></a></li>
                <li id='number' role="presentation" class="active"><a href="tel:+5555555555"><span><i class="fa fa-phone" aria-hidden="true"></i>555-555-5555</span></a></li>
              </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#contact"><span>how it works</span></a></li>
                    <li><a href="#contact"><span>in the news</span></a></li>
                    <li><a href="#location"><span>our locations</span></a></li>
                    <li><a href="#contact"><span>faq</span></a></li>
                    <li><a href="#contact"><span>contact us</span></a></li>
                </ul>

            </div>
        </div>
    </div>

        @RenderBody()

        <footer>

            <nav>
              <ul class="top-nav">
                <li><a href="#contact">about us</a></li>
                <li><a href="#contact">how it works</a></li>
                <li><a href="#contact">in the news</a></li>
                <li><a href="#contact">our locations</a></li>
                <li><a href="#contact">faq</a></li>
                <li><a href="#contact">contact us</a></li>
              </ul>
              <ul class="bottom-nav">
                <li><a href="#contact">&copy;  Example Site @DateTime.Now.Year</a></li>
                <li><a href="#contact">Privacy Statement</a></li>
                <li><a href="#contact">Tems of Use</a></li>
              </ul>
            </nav>

        </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



</body>
</html>
