<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daniel Carter Contact Page</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Example Site", "Index", "Home", new { area = "" }, new { @class = "navbar-brand active" })
            </div>
            <div class="navbar-collapse collapse">
              <ul class="nav navbar-right nav-pills">
                <li id='facebook'><a href="@Url.Action("Index", "Home")" ><span><i class="fa fa-facebook" aria-hidden="true"></i></span></a></li>
                <li id='number' role="presentation" class="active"><a href="@Url.Action("Index", "Home")"><span><i class="fa fa-phone" aria-hidden="true"></i>555-555-5555</span></a></li>
              </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="@Url.Action("Index", "Home")"><span>how it works</span></a></li>
                    <li><a href="@Url.Action("Index", "Home")"><span>in the news</span></a></li>
                    <li><a href="@Url.Action("Index", "Home")"><span>our locations</span></a></li>
                    <li><a href="@Url.Action("Index", "Home")"><span>faq</span></a></li>
                    <li><a href="@Url.Action("Index", "Home")"><span>contact us</span></a></li>
                </ul>

            </div>
        </div>
    </div>

        @RenderBody()

        <footer>

            <nav>
              <ul class="top-nav">
                <li>about us</li>
                <li>how it works</li>
                <li>in the news</li>
                <li>our location</li>
                <li>faq</li>
                <li>contact us</li>
              </ul>
              <ul class="bottom-nav">
                <li>&copy;  Example Site @DateTime.Now.Year</li>
                <li>Privacy Statement</li>
                <li>Tems of Use</li>
              </ul>
            </nav>

        </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
    //just spicing up the UX a bit with some click-scrolling and class-adding and removing for our nav, this stuff would get tucked away on a real project

    var scrollTo = function() {
    if (document.documentElement.clientWidth > 1060) {
       $('a[href^="#"]').pageScroll({
           speed: 1750,
           maxDuration: 2500,
           offset:-120
       });
     } else if (document.documentElement.clientWidth > 768) {
      $('a[href^="#"]').pageScroll({
          speed: 1750,
          maxDuration: 2500,
          offset:-180
      });
      } else {
        $('a[href^="#"]').pageScroll({
            speed: 1000, //mobile framerates can have a hard time when auto-scrolling too fast
            maxDuration: 2500,
            offset:-100
        });
      }
    }
    $(document).ready(function () {
    $("#contactForm").validate({ // initialize the plugin
        rules: {
            name: {
                required: true,
            },
            email: {
                required: true,
                email: true
            },
            subject: {
                required: true,
                minlength: 3
            },
            message: {
                required: true,
                minlength: 3
            }
        },

    submitHandler: function (form) {
    event.preventDefault();
    $('#userMessage').addClass('success').val('Thank you, your message has been delivered!');
    $('input').val('');
    return false;
    }
    });

    scrollTo();
    });

    $(window).resize(function() {
      scrollTo();
      });
    </script>
</body>
</html>
